<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/bday_gender"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/pink1"
    tools:context=".Activities.NewAccountPage"
    android:transitionName="filmTransition"
    android:padding="20dp">


    <LinearLayout
        android:layout_width="371dp"
        android:layout_height="687dp"
        android:background="@drawable/rounded_corner"
        android:orientation="vertical"
        android:paddingTop="200dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:fontFamily="@font/aclonica_regular"
            android:text="@string/account_personalizations"
            android:textSize="36sp"
            android:transitionName="logo_text"
            android:paddingBottom="36dp"
            />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:gravity="center"
            android:textAlignment="center"
            android:background="@drawable/spinner_outline"
            android:paddingBottom="36dp"/>


        <com.google.android.material.textfield.TextInputLayout

            style="@style/Widget.Material3.TextInputEditText.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/age"
            android:padding="5dp"
            app:counterMaxLength="3">

            <EditText
                android:id="@+id/age"
                android:layout_width="353dp"
                android:layout_height="wrap_content"
                android:background="#E0E0E0"
                android:fontFamily="@font/advent_pro"
                android:importantForAutofill="no"
                android:inputType="text"
                android:textColorHint="#B71C1C"
                android:textSize="18sp"
                tools:ignore="TextFields,VisualLintTextFieldSize" />

        </com.google.android.material.textfield.TextInputLayout>





    <Button
        android:id="@+id/next2"
        android:layout_width="97dp"
        android:layout_height="48dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_rectangle"
        android:elevation="20dp"
        android:fontFamily="@font/aclonica_regular"
        android:text="@string/next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</LinearLayout>
</LinearLayout>